@using WebQuanAoThoiTrang.Models
@model List<SanPham>

@{
    ViewBag.Title = "Side";
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
    }

    .sidebar {
        width: 250px;
        padding: 20px;
        background-color: #f8f9fa;
        border-left: 1px solid #ddd; /* Changed border to left for right sidebar */
        margin: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .sidebar h4 {
            font-size: 1.2em;
            margin-bottom: 10px;
            text-align: center;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 5px;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: #007bff;
                    display: block;
                    padding: 10px;
                    border-radius: 4px;
                    transition: background-color 0.3s ease;
                }

                    .sidebar ul li a:hover {
                        background-color: #e2e6ea;
                    }

    .filter {
        margin-top: 20px;
    }

        .filter label {
            display: block;
            margin-bottom: 10px;
        }

        .filter input[type="checkbox"] {
            margin-right: 10px;
        }
</style>

<div class="sidebar">
    <div class="filter">
        <h4>Thương hiệu quần áo thời trang</h4>
        <ul class="list-group">
            @if (ViewBag.ThuongHieu != null)
            {
                foreach (var item in ViewBag.ThuongHieu)
                {
                    <li class="list-group-item">
                        <a href="@Url.Action("TheoThuongHieu", "HienThi", new { brandId = item.IDNhaCungCap })">
                            @item.TenNhaCungCap
                        </a>
                    </li>
                }
            }
        </ul>
    </div>
    <div class="filter">
        @using (Html.BeginForm("TheoGia", "HienThi", FormMethod.Get, new { @class = "filter-form", id = "priceFilterForm" }))
        {
            <h4>Giá bán</h4>
            <label>
                <input type="checkbox" name="priceRange" value="0-200000"
                       @(ViewBag.SelectedPriceRange != null && ((string[])ViewBag.SelectedPriceRange).Contains("0-200000") ? "checked" : "")
                       onchange="submitForm()" />
                Dưới 200.000VNĐ
            </label>
            <label>
                <input type="checkbox" name="priceRange" value="200000-400000"
                       @(ViewBag.SelectedPriceRange != null && ((string[])ViewBag.SelectedPriceRange).Contains("200000-400000") ? "checked" : "")
                       onchange="submitForm()" />
                Từ 200.000VNĐ đến 400.000VNĐ
            </label>
            <label>
                <input type="checkbox" name="priceRange" value="400000-1000000"
                       @(ViewBag.SelectedPriceRange != null && ((string[])ViewBag.SelectedPriceRange).Contains("400000-1000000") ? "checked" : "")
                       onchange="submitForm()" />
                Từ 400.000VNĐ đến 1.000.000VNĐ
            </label>
            <label>
                <input type="checkbox" name="priceRange" value="1000000-"
                       @(ViewBag.SelectedPriceRange != null && ((string[])ViewBag.SelectedPriceRange).Contains("1000000-") ? "checked" : "")
                       onchange="submitForm()" />
                Trên 1.000.000VNĐ
            </label>
        }
    </div>
</div>

<script>
    function submitForm() {
        document.getElementById("priceFilterForm").submit();
    }
</script>
