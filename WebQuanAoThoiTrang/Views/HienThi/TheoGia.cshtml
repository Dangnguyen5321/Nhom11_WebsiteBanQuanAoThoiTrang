            <div class="product-list">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4 product">

                        <div class="product-card">
                            <div class="position-relative Image">
                                <a href="@Url.Action("Details", "HienThi", new {@id= item.IDSanPham})" title="xemchitiet">
                                    <img src="~/img/img_sp/@item.HinhAnh" height="180" />
                                </a>
                            </div>
