<style>
    .ChinhHang {
        background-color: #333;
        color: #fff;
        padding: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: box-shadow 0.3s;
        background-color: white;
        cursor: pointer;
    }

        .product-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%;
            height: auto;
        }

    .product-list {
        display: flex;
        overflow-x: auto;
    }

    .product {
        background: #fff;
        color: #000;
        padding: 10px;
        margin: 10px;
        flex: 0 0 auto;
    }

    .product-info {
        padding: 15px;
    }

    .product-price {
        color: red;
        font-size: 20px;
        font-weight: bold;
    }

    .product-original-price {
        text-decoration: line-through;
        color: #999;
    }

    .badge-sale {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: red;
        color: white;
        padding: 5px 10px;
        border-radius: 3px;
    }

    .badge-installment {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: blue;
        color: white;
        padding: 5px 10px;
        border-radius: 3px;
    }
    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover,
        .btn-outline-danger:focus,
        .btn-outline-danger:active {
            background-color: #dc3545;
            color: #fff;
            border-color: #dc3545;
        }
</style>