@model IEnumerable<WebQuanAoThoiTrang.Models.SanPham>
@{
    ViewBag.Title = "Sale";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    Layout = null;
}
<link href="~/Content/Site.css" rel="stylesheet" />
<div class="Sale bg-white container-fluid bg-white">
    <div class="row">
        <div style="display: flex; justify-content: space-between; align-items: center;" class="col-md-9">
            <h2 style="color: mediumblue;">Giảm Mạnh</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4 ">
                    @*<a href="@Url.Action("XemThem", "CTSP")">*@
                    <div class="card product-card" style="height:350px">
                        <div class="position-relative Image">
                            <a href="@Url.Action("Details", "HienThi", new {@id= item.IDSanPham})" title="xemchitiet">
                                <img class="card-img-top" src="~/img/img_sp/@item.HinhAnh" />
                            </a>
                        </div>
                        <div class="cart-body">
                            @*<h5>@item.TenSanPham</h5>*@
                            @Html.ActionLink(item.TenSanPham, "Details", "HienThi", new { id = item.IDSanPham }, new { @class = "product-name" })
                            <p class="product-price">
                                @item.Gia VND
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                                <button class="btn btn-outline-danger btn-sm" onclick="addToCart(@item.IDSanPham)">Giỏ Hàng</button>
                            </div>

                            <script>
function addToCart(maSP) {
    fetch('@Url.Action("AddToCart", "Cart")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest',
        },
        body: JSON.stringify({ maSP: maSP })
    })
    .then(response => {
        if(response.ok) {
            alert('Sản phẩm đã được thêm vào giỏ hàng!');
        } else {
            alert('Có lỗi xảy ra. Vui lòng thử lại!');
        }
    })
    .catch(error => console.error('Lỗi:', error));
}
                            </script>
                        </div>
                    </div>

                </div>
            }

            @*href="@Url.Action("CT_SPHot", "ChiTiet")"*@
        </div>
    </div>

</div>

