
@model IEnumerable<WebQuanAoThoiTrang.Models.SanPham>

@{
    ViewBag.Title = "Hot";
    Layout = null;

}

<div class="Hot bg-white ">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h2 style="color: mediumblue;">Nổi Bật</h2>

    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 ">
                <div class="cart product-card" style="height:350px">
                    <div class="position-relative Image">
                        <a href="@Url.Action("Details", "HienThi", new {@id= item.IDSanPham})" title="xemchitiet">
                            <img class="card-img-top" src="~/img/img_sp/@item.HinhAnh" />
                        </a>
                    </div>
                    <div class="cart-body">
                        @Html.ActionLink(item.TenSanPham, "Details", "HienThi", new { id = item.IDSanPham }, new { @class = "product-name" })
                        <p class="product-price">@item.Gia VND</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <button class="btn btn-outline-danger btn-sm" onclick="addToCart(@item.IDSanPham)">Giỏ Hàng</button>
                        </div>

                        <script>
function addToCart(maSP) {
    fetch('@Url.Action("AddToCart", "Cart")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest',
        },
        body: JSON.stringify({ maSP: maSP })
    })
    .then(response => {
        if(response.ok) {
            alert('Sản phẩm đã được thêm vào giỏ hàng!');
        } else {
            alert('Có lỗi xảy ra. Vui lòng thử lại!');
        }
    })
    .catch(error => console.error('Lỗi:', error));
}
                        </script>
                    </div>
                </div>
            </div>
        }
    </div>


</div>

<style>
    .Hot {
        background-color: #333;
        color: #fff;
        padding: 20px;
    }

    .product-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        transition: box-shadow 0.3s;
        background-color: white;
        cursor: pointer;
    }

        .product-card:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%;
            height: auto;
        }

    .product-list {
        display: flex;
        overflow-x: auto;
    }

    .product {
        background: #fff;
        color: #000;
        padding: 10px;
        margin: 10px;
        flex: 0 0 auto;
    }

    .product-info {
        padding: 15px;
    }

    .product-price {
        color: red;
        font-size: 20px;
        font-weight: bold;
    }

    .product-original-price {
        text-decoration: line-through;
        color: #999;
    }

    .badge-sale {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: red;
        color: white;
        padding: 5px 10px;
        border-radius: 3px;
    }

    .badge-installment {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: blue;
        color: white;
        padding: 5px 10px;
        border-radius: 3px;
    }
</style>
